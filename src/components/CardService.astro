---
export interface Props{
    title: string;
    desc: string;
}

const { desc, title} = Astro.props
---

<div class="relative">
    <div class="absolute z-10 inset-0 bg-gradient-to-r from-blue-500 to-black shadow-lg transform -skew-x-6 sm:skew-y-0 sm:rotate-6 sm:rounded-lg">
    </div>
    <div class="relative z-20 bg-white h-full rounded-md shadow-md px-10 py-12">
        <h2 class="pt-3 font-bold text-2xl">{title}</h2>
        <p class="pt-3">{desc}</p>
    </div>
</div>